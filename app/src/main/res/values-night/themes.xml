<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThoughtPad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_500</item> <!-- Use the same primary color for consistency -->
        <item name="colorPrimaryVariant">@color/blue_700</item> <!-- Use the same variant for consistency -->
        <item name="colorOnPrimary">@color/white</item> <!-- Keep text color on primary white for visibility -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_700</item> <!-- Darker teal for the secondary color -->
        <item name="colorSecondaryVariant">@color/teal_200</item> <!-- Use the lighter teal for variants -->
        <item name="colorOnSecondary">@color/white</item> <!-- Keep text color on secondary white for visibility -->

        <!--navigation bar color -->
        <item name="android:navigationBarColor">@color/dark_blue_700</item>

        <!-- Customize your theme here -->
        <item name="colorPrimaryDark">@color/dark_blue_500</item> <!-- Keep the same dark blue -->
        <item name="android:textColorPrimary">@color/white</item> <!-- White text for better contrast -->

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/dark_blue_700</item> <!-- Dark background -->
        <item name="backgroundColor">@color/dark_blue_700</item> <!-- Match the window background -->
        <item name="colorSurface">@color/black</item> <!-- Dark surface for cards, dialogs, etc. -->

        <!-- Text colors -->
        <item name="colorOnBackground">@color/white</item> <!-- Text color on background -->
        <item name="colorOnSurface">@color/white</item> <!-- Text color on surfaces -->

        <!-- Other optional attributes -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
