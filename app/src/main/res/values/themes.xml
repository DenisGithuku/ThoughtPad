<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThoughtPad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <!-- Customize your theme here. -->

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/white</item> <!-- Dark background -->
        <item name="backgroundColor">@color/white</item> <!-- Match the window background -->
        <item name="colorSurface">@color/white</item> <!-- Dark surface for cards, dialogs, etc. -->

        <!-- Text colors -->
        <item name="colorOnBackground">@color/faded_gray</item> <!-- Text color on background -->
        <item name="colorOnSurface">@color/faded_gray</item>
        <item name="colorPrimaryDark">@color/faded_black</item>
        <item name="android:textColorPrimary">@color/faded_gray</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>